<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_pen_settings"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:backgroundTint="#ffb4a2"
    android:gravity="center"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/ic_draw_pen"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/pallet_normal"
        android:padding="15dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_pen"

        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_draw_color"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/pallet_normal"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerInside"
        app:lottie_autoPlay="false"
        app:lottie_loop="false" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ic_draw_line_weight"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/pallet_normal"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerInside"
        app:lottie_autoPlay="false"
        app:lottie_loop="false" />


    <ImageButton
        android:id="@+id/ic_draw_eraser"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/pallet_normal"
        android:padding="15dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_eraser"


        />

</LinearLayout>
